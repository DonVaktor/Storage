<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/box_item"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:background="@color/mint">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/barcode_text_view"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:background="@color/middle_purple"
                android:padding="8dp"
                android:text="Barcode"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:background="@color/ultra_light_purple"
                android:maxEms="20"
                android:padding="8dp"
                android:text="Name"
                android:textColor="@color/black" />

        </LinearLayout>

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/middle_purple"
            android:maxEms="4"
            android:padding="8dp"
            android:text="Quantity"
            android:textColor="@color/black" /> <!-- Встановлено максимальну кількість символів -->

    </TableRow>

</TableLayout>
